<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<EditText
		android:id="@+id/tServer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="server protocol and host without ending /"
		android:text="http://10.0.3.2:9080" />

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="USER"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<TextView
		android:id="@+id/tUser"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="tUser"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<Button
		android:id="@+id/bRegisterNewUser"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Register as new user" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bGetAuthToken"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Login as user" />

		<EditText
			android:id="@+id/tUserEmail"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="textEmailAddress"
			android:text="\@debug" />

	</LinearLayout>

	<Button
		android:id="@+id/bLogout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Logout" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="MABEL"
		android:textAppearance="?android:attr/textAppearanceSmall" />

	<Button
		android:id="@+id/bMabelClientState"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Client state" />

	<Button
		android:id="@+id/bGenerateDummies"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Generate dummy markers &amp; labels" />

	<Button
		android:id="@+id/bSync"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="SYNC" />
</LinearLayout>