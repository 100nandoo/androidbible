<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bAngka1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngkaC"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="28dp"
            android:textStyle="bold" >
        </Button>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bAngka6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngka0"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="28dp" >
        </Button>

        <Button
            android:id="@+id/bAngkaPindah"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="2dp"
            android:text=":"
            android:textSize="28dp"
            android:textStyle="bold" >
        </Button>
    </TableRow>

</TableLayout>