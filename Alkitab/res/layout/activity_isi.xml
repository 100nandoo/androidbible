<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <yuku.alkitab.base.widget.VersesView
        android:id="@+id/lsIsi"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/panelNavigasi"
        style="?attr/actionBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abs__action_bar_default_height" >

        <ImageButton
            android:id="@+id/bKiri"
            style="?attr/actionButtonStyle"
            android:layout_width="@dimen/abs__action_button_min_width"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_previous_chapter"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@drawable/ic_nav_arrow_left" />

        <Button
            android:id="@+id/bTuju"
            style="?attr/actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Nama Kitab Agak Panjang 20"
            android:textColor="#f0f0f0"
            android:textSize="18dp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/bKanan"
            style="?attr/actionButtonStyle"
            android:layout_width="@dimen/abs__action_button_min_width"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_next_chapter"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@drawable/ic_nav_arrow_right" />
    </LinearLayout>

</LinearLayout>