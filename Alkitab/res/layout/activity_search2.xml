<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<yuku.androidsdk.searchbar.SearchBar android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:id="@+id/searchBar" />

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/panelFilter" android:paddingLeft="12dp">
		<CheckBox android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cFilterLama" android:checked="true" android:text="@string/perj_lama" android:layout_centerVertical="true" android:textColor="#000"/>
		<CheckBox android:layout_toRightOf="@+id/cFilterLama" android:layout_alignBaseline="@+id/cFilterLama" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/cFilterBaru" android:checked="true" android:textColor="#000" android:text="@string/perj_baru" android:layout_centerVertical="true" />
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:id="@+id/bEditFilter" android:background="@null" android:paddingRight="18dp" android:paddingLeft="12dp" android:src="@drawable/btn_panah" android:paddingBottom="8dp" android:paddingTop="8dp"/>
	</RelativeLayout>

	<ListView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/lsHasilCari" android:layout_weight="1" />
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/lTiadaHasil" android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:text="Pencarian tidak menghasilkan apa-apa. (dan seterusnya omongan gp)" android:gravity="center_horizontal" android:paddingTop="16dp" android:visibility="gone" />
</LinearLayout>
