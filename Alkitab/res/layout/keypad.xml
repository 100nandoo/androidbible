<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<Button
			android:id="@+id/bAngka1"
			android:text="1"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka2"
			android:text="2"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka3"
			android:text="3"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
	</TableRow>

	<TableRow
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<Button
			android:id="@+id/bAngka4"
			android:text="4"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka5"
			android:text="5"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka6"
			android:text="6"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
	</TableRow>

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<Button
			android:id="@+id/bAngka7"
			android:text="7"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:text="8"
			android:id="@+id/bAngka8"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka9"
			android:text="9"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
	</TableRow>

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<Button
			android:text="C"
			android:id="@+id/bAngkaC"
			android:layout_margin="2dp" android:textSize="28dp" android:textStyle="bold" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:id="@+id/bAngka0"
			android:text="0"
			android:layout_margin="2dp" android:textSize="28dp" android:layout_width="60dp" android:layout_height="60dp"></Button>
		<Button
			android:text=":"
			android:id="@+id/bAngkaPindah"
			android:layout_margin="2dp" android:textSize="28dp" android:textStyle="bold" android:layout_width="60dp" android:layout_height="60dp"></Button>
	</TableRow>
</TableLayout>
