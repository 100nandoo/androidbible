<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#2c2c2c"
	android:divider="@android:drawable/divider_horizontal_dark"
	android:dividerPadding="2dp"
	android:orientation="vertical"
	android:showDividers="middle">

	<Button
		android:id="@+id/bBible"
		style="?android:buttonBarButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_bible"
		android:drawablePadding="8dp"
		android:fontFamily="sans-serif-light"
		android:gravity="left|center_vertical"
		android:text="@string/menuBible" />

	<Button
		android:id="@+id/bDevotion"
		style="?android:buttonBarButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_devotion"
		android:drawablePadding="8dp"
		android:fontFamily="sans-serif-light"
		android:gravity="left|center_vertical"
		android:text="@string/menuDevotion" />

	<Button
		android:id="@+id/bReadingPlan"
		style="?android:buttonBarButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/ic_drawer_reading_plan"
		android:drawablePadding="8dp"
		android:fontFamily="sans-serif-light"
		android:gravity="left|center_vertical"
		android:text="@string/rp_menuReadingPlan" />
</LinearLayout>