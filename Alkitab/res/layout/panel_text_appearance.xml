<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#efff"
    android:orientation="vertical"
    tools:context=".base.IsiActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <CheckBox
            android:id="@+id/cNightMode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menuNightMode"/>

        <CheckBox
            android:id="@+id/cFullScreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/menuFullScreen"/>

        <ImageButton
            android:id="@+id/bClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:background="?android:actionBarItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_action_remove"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <Spinner
            android:id="@+id/cbTypeface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:listitem="@android:layout/simple_spinner_dropdown_item"/>

        <ToggleButton
            android:id="@+id/cBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textOff="@string/text_appearance_bold_switch_off"
            android:textOn="@string/text_appearance_bold_switch_on"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_appearance_text_size"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <SeekBar
            android:id="@+id/sbTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:max="80"/>

        <TextView
            android:id="@+id/lTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*17.0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_appearance_line_spacing"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <SeekBar
            android:id="@+id/sbLineSpacing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:max="20"/>

        <TextView
            android:id="@+id/lLineSpacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*1.05"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/cbColorTheme"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            tools:listitem="@android:layout/simple_spinner_dropdown_item"/>

        <Button
            android:id="@+id/bCustomColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¦"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

</LinearLayout>