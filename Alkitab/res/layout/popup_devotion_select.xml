<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/popup"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <Spinner
            android:id="@+id/cbKind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:text="*devotion name"
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bPrev"
                android:contentDescription="@string/desc_previous_day"
                android:src="@drawable/ic_nav_left_dark"
                style="@style/DevotionSelectNavButton"/>

            <TextView
                android:id="@+id/tCurrentDate"
                android:text="*current date"
                android:textAppearance="?android:attr/textAppearanceSmallInverse"
                android:textColor="#ddd"
                style="@style/DevotionSelectCurrentDate"
                tools:ignore="HardcodedText"/>

            <ImageButton
                android:id="@+id/bNext"
                android:contentDescription="@string/desc_next_day"
                android:src="@drawable/ic_nav_right_dark"
                style="@style/DevotionSelectNavButton"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_up"
        tools:ignore="ContentDescription"/>

</RelativeLayout>